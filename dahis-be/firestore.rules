rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // NFC Tags - Sadece okuma (public)
    match /nfc_tags/{nfcId} {
      allow read: if true;
      allow write: if false; // Sadece admin panelinden yazÄ±labilir
    }

    // NFC Scans - Sadece yazma (public), okuma yok
    match /nfc_scans/{scanId} {
      allow read: if false; // Sadece admin panelinden okunabilir
      allow create: if true; // Herkes scan kaydedebilir
      allow update, delete: if false;
    }
  }
}


# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Build + TestFlight (CI: Match ile imza)"
  lane :custom_lane do
    setup_ci if is_ci

    # CI: App Store Connect API key ile giriş (şifre sormaz)
    if ENV["APP_STORE_CONNECT_API_KEY_KEY_ID"] && ENV["APP_STORE_CONNECT_API_KEY_KEY_FILEPATH"]
      app_store_connect_api_key(
        key_id: ENV["APPSTORE_KEY_ID"],
        issuer_id: ENV["APPSTORE_ISSUER_ID"],
        key_filepath: ENV["APPSTORE_PRIVATE_KEY"],
        is_key_content_base64: false
      )
    end

    match(type: "appstore", readonly: true)
    increment_build_number(
      build_number: ENV["GITHUB_RUN_NUMBER"]
    )
    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      configuration: "Release",
      derived_data_path: "build/ios",
      export_method: "app-store",
      xcargs: "-allowProvisioningUpdates",
      export_options: {
        provisioningProfiles: {
          "com.dahis.app" => "match AppStore com.dahis.app"
        }
      }
    )
    upload_to_testflight
  end
end
